<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feed.title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/feed.domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ycombinator.com"
            android:layout_marginTop="4dp"

            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feed.points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_rounded_rectangle"
                android:textColor="#fff"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:textSize="10sp"
                tools:text="123"
                />

            <TextView
                android:id="@+id/feed.posted_by"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                tools:text="by XYZ 10 hours ago"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@android:color/transparent"/>
</LinearLayout>